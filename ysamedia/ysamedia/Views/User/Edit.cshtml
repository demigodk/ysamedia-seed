@model ysamedia.Entities.User

@{
    ViewData["Title"] = "Additional Information";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <p class="text-muted m-b-30 font-14">
                Edit Your Personal Information & Add Additional Information
            </p>
            <hr />
            <br />
            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form asp-action="Edit">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <input type="hidden" asp-for="UserId" />
                            <input type="hidden" asp-for="AccessFailedCount" class="form-control" />
                            <input type="hidden" asp-for="ConcurrencyStamp" class="form-control" />
                            <input type="hidden" asp-for="Email" class="form-control" />
                            <input type="hidden" asp-for="EmailConfirmed" />
                            <input type="hidden" asp-for="LockoutEnabled" />
                            <input type="hidden" asp-for="LockoutEnd" class="form-control" />
                            <input type="hidden" asp-for="NormalizedEmail" class="form-control" />
                            <input type="hidden" asp-for="NormalizedUserName" class="form-control" />
                            <input type="hidden" asp-for="PasswordHash" class="form-control" />
                            <input type="hidden" asp-for="PhoneNumberConfirmed" />
                            <input type="hidden" asp-for="SecurityStamp" class="form-control" />
                            <input type="hidden" asp-for="TwoFactorEnabled" />
                            <input type="hidden" asp-for="UserName" class="form-control" />
                            <input type="hidden" asp-for="Discriminator" class="form-control" />
                            <input type="hidden" asp-for="DisplayName" class="form-control" />
                            <input type="hidden" asp-for="DateJoinedDept" class="form-control" />
                            <input type="hidden" asp-for="DateOfBirth" class="form-control" />
                            <input type="hidden" asp-for="Surname" class="form-control" />
                            <input type="hidden" asp-for="FirstName" class="form-control" />
                            <input type="hidden" asp-for="GenderId" class="form-control" />
                            <input type="hidden" asp-for="PhysicalAddress" class="form-control" />
                            <input type="hidden" asp-for="DriverLicence" class="form-control" />
                            <input type="hidden" asp-for="Approved" class="form-control" />

                            <div class="form-group row">
                                <label class="col-2 col-form-label">Phone Number</label>
                                <div class="col-10">
                                    <input asp-for="PhoneNumber" class="form-control" />
                                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Home Number</label>
                                <div class="col-10">
                                    <input asp-for="HomeNumber" class="form-control" />
                                    <span asp-validation-for="HomeNumber" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Work Number</label>
                                <div class="col-10">
                                    <input asp-for="WorkNumber" class="form-control" />
                                    <span asp-validation-for="WorkNumber" class="text-danger"></span>
                                </div>
                            </div>

                            <br />
                            <hr />
                            <div class="form-group row">
                                <label class="col-2 col-form-label"><b>PHYSICAL ADDRESS</b></label>                               
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Street</label>
                                <div class="col-10">
                                    <input asp-for="Street" class="form-control">
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label class="col-form-label">City</label>
                                    <input asp-for="City" class="form-control">
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                                <div class="form-group col-md-4">
                                    <label class="col-form-label">Province</label>
                                    <input asp-for="Province" class="form-control">
                                    <span asp-validation-for="Province" class="text-danger"></span>
                                </div>                               
                                <div class="form-group col-md-2">
                                    <label class="col-form-label">Postal Code</label>
                                    <input asp-for="PostalCode" class="form-control" id="inputZip" maxlenth="4">
                                </div>
                            </div>                               
                                <hr />
                                <br />
                                <div class="form-group">
                                    <button class="btn btn-custom waves-effect waves-light" type="submit">Save</button>
                                </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

