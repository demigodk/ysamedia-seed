@model ysamedia.Models.UserScreeningViewModels.UserScreeningViewModel

@{
    ViewData["Title"] = "Media Form";
}

<div class="row">
    <div class="col-12">
        <div class="card-box">
            <h2 class="m-t-0 header-title">@ViewData["Title"]</h2>
            <p class="text-muted m-b-30 font-14">
                Media registration form, for users who want to join media.
            </p>
            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form class="form-horizontal" role="form">
                            <div class="form-group row">
                                <label class="col-2 col-form-label">First Name(s)</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Surname</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Gender</label>
                                <div class="col-10">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Male</option>
                                        <option>Female</option>
                                        <option>Unspecified</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Date Of Birth</label>
                                <div class="col-10">
                                    <input class="form-control" type="date" name="date">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Age Group</label>
                                <div class="col-10">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>18 - 25</option>
                                        <option>26 - 35</option>
                                        <option>36 - 50</option>
                                        <option>51 - 75</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Marital Status</label>
                                <div class="col-10">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Single</option>
                                        <option>Engaged</option>
                                        <option>Married</option>
                                        <option>Widow</option>
                                        <option>Widower</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <hr />
                            <div class="form-group row">
                                <label class="col-2 col-form-label"><b>Number Of Dependents</b></label>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Pre-School</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Primary</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">High-School</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Tertiary</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Occupation</label>
                                <div class="col-10">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Student</option>
                                        <option>Internship</option>
                                        <option>Employed</option>
                                        <option>Self-Employed</option>
                                        <option>Other</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <hr />
                            <div class="form-group row">
                                <label class="col-2 col-form-label"><b>Contact Details</b></label>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Cell</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label">Home</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" value="">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-2 col-form-label" for="exampleInputEmail1">Email address</label>
                                <div class="col-10">
                                    <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Enter email">
                                </div>
                            </div>
                            <br />
                            <hr />
                            <br />
                            <div class="form-group row">
                                <label class="col-2 col-form-label"><b>Physical Address</b></label>
                            </div>
                            <div class="form-group row">
                                <label for="inputAddress" class="col-2 col-form-label">Street Address</label>
                                <div class="col-10">
                                    <input type="text" class="form-control" id="inputAddress" placeholder="Street Address">
                                </div>
                            </div>
                            <div class="form-row">
                                <div class="form-group col-md-6">
                                    <label for="inputCity" class="col-form-label">City</label>
                                    <input type="text" class="form-control" id="inputCity">
                                </div>
                                <div class="form-group col-md-4">
                                    <label for="inputState" class="col-form-label">Province</label>
                                    <select id="inputState" class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Gauteng</option>
                                        <option>Limpopo</option>
                                        <option>Mpumalanga</option>
                                        <option>Kwazulu Natal</option>
                                        <option>Free State</option>
                                        <option>North West</option>
                                        <option>Northern Cape</option>
                                        <option>Western Cape</option>
                                        <option>Eastern Cape</option>
                                    </select>
                                </div>
                                <div class="form-group col-md-2">
                                    <label for="inputZip" class="col-form-label">Postal Code</label>
                                    <input type="text" class="form-control" id="inputZip">
                                </div>
                            </div>
                            <br />
                            <hr />
                            <br />
                            <div class="form-group row">
                                <label class="col-2 col-form-label"><b>Additional Information</b></label>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q1. In which denomination or church do you belong to?</label>
                                <div class="col-12">
                                    <textarea class="form-control" rows="2"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q2. What brought you here to Yahweh Shamma Assembly?</label>
                                <div class="col-12">
                                    <textarea class="form-control" rows="3"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q3. Have you been baptized?</label>
                                <div class="col-12">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Yes</option>
                                        <option>No</option>
                                    </select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q4. (If you answered "Yes" to Q3) When were you baptized?</label>
                                <div class="col-12">
                                    <input class="form-control" type="text" name="date">
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q5. Would you please give some comment about the service that you have just attended?</label>
                                <div class="col-12">
                                    <textarea class="form-control" rows="5"></textarea>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label class="col-12 col-form-label">Q6. Would you like to follow some teachings and become a member at our community?</label>
                                <div class="col-12">
                                    <select class="form-control">
                                        <option>- Please Select -</option>
                                        <option>Yes</option>
                                        <option>No</option>
                                    </select>
                                </div>
                            </div>
                            <br />
                            <hr />
                            <br />
                            <div class="form-group row">
                                <label class="col-4 col-form-label">Enter A Date For This Form Entry</label>
                                <div class="col-8">
                                    <input class="form-control" type="date" name="date">
                                </div>
                            </div>
                            <button class="btn btn-block btn-custom waves-effect waves-light" type="submit" id="validateIt">Submit Form</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
