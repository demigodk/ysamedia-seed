@model ysamedia.Models.TimeLogViewModels.TimeLogViewModel

@{
    ViewData["Title"] = "View Logs";
}

<div class="row">
    <div class="col-sm-12">
        <div class="card-box">
            <h2 class="header-title m-t-0">View Individual Log</h2>
            <p class="text-muted font-14 m-b-25">
                Pick a date and enter a category to display.
            </p>
            <div class="row">
                <div class="col-lg-12">
                    <div class="">
                        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post" id="my-form">
                            <div class="form-group">
                                <label>Pick Date</label>
                                <div>
                                    <div class="input-group">
                                        <input asp-for="date" class="form-control" id="txtdate" />
                                    </div>
                                    <span asp-validation-for="date" class="text-danger"></span>
                                </div>
                            </div>                            
                            <div class="form-group">
                                <label>Time Category</label>
                                <select asp-for="TimeInID"
                                        class="form-control"
                                        asp-items="@(new SelectList(ViewBag.ListOfTimes, "TimeId", "Category"))">
                                    <option value="" hidden disabled selected>Please select</option>
                                </select>
                                <span asp-validation-for="TimeInID" class="text-danger"></span>
                            </div>
                            <button class="btn btn-block btn-custom waves-effect waves-light" type="submit" id="validateIt">Display Log</button>
                        </form>
                        <br/>
                        <br/>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<link href="~/lib/jquery-ui/themes/flick/jquery-ui.css" rel="stylesheet" />

@section scripts {

    @await Html.PartialAsync("_ValidationScriptsPartial")

    <script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            $('#txtdate').datepicker({
                showOn: 'both',
                buttonText: 'Calendar',
                dateFormat: 'yy/mm/dd'
            });
        });
    </script>
}
