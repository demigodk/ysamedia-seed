@model ysamedia.Models.TimeLogViewModels.TimeLogViewModel

@{ 
    ViewData["Title"] = "Time In Log";
}

<h3>@ViewData["Title"]</h3>
<div class="row">
    <div class="col-md-8">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <hr />
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="date"></label>
                <input asp-for="date" class="form-control" id="txtdate"/>
                <span asp-validation-for="date" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Save Entry</button>
        </form>
    </div>
</div>

<link href="~/lib/jquery-ui/themes/flick/jquery-ui.css" rel="stylesheet" />

@section scripts {

<script src="~/lib/jquery-ui/jquery-ui.js"></script>

    <script>
        $(document).ready(function () {
            $('#txtdate').datepicker({
                showOn: 'both',
                buttonText: 'Calendar',
                dateFormat: 'yy/mm/dd'
            });            
        });
    </script>
}
