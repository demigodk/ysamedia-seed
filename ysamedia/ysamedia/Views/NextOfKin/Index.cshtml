@model IEnumerable<ysamedia.Entities.NextOfKin>

@{
    ViewData["Title"] = "Next Of Kin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">            
            <p>
                <a asp-action="Create">Create New</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <label>Name</label>                            
                        </th>
                        <th>
                            <label>Surname</label>                           
                        </th>
                        <th>
                            <label>Relationship (e.g. Aunt)</label>                           
                        </th>
                        <th>
                            <label>Email Address</label>                            
                        </th>
                        <th>
                            <label>Phone Number</label>                            
                        </th>
                        <th>
                            <label>Work Number</label>                           
                        </th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Surname)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RelationshipType)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Email)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PhoneNumber)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.WorkNumber)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.KinId">Edit</a> |
                                <a asp-action="Details" asp-route-id="@item.KinId">Details</a> |
                                <a asp-action="Delete" asp-route-id="@item.KinId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
    </div>
</div>