@model ysamedia.Models.ChurchViewModels.ChurchMemberViewModel

@{ 
    ViewData["Title"] = "Register A Church Member";
}

<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-route-returnUrl="@ViewData["ReturnUrl"]" method="post">
            <h4>Add A New Church Member.</h4>
            <hr/>
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Surname" class="form-control" placeholder="Surname"  />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="GenderId" class="form-control" placeholder="GenderId" />
                <span asp-validation-for="GenderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="AgeGroupId" class="form-control" placeholder="AgeGroupId" />
                <span asp-validation-for="AgeGroupId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="RelationshipId" class="form-group" placeholder="RelationshipId" />
                <span asp-validation-for="RelationshipId" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default btn-primary">Submit</button>
        </form>
    </dv>
</div>