@model ysamedia.Entities.TblPhoto

@{
    ViewData["Title"] = "User Profile";
    ViewData.AddActivePage(UserProfileNavPages.Index);
    ////Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@ViewData["Title"]</h2>
@*@Html.Partial("_StatusMessage", Model.StatusMessage)*@
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data" asp-controller="UserProfile" asp-action="Index" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload Profile Picture: </p>
                    <input asp-for="PhotoName" type="file" name="pic" accept="image/*" />
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Upload" />
            </div>
        </form>
    </div>
</div>

<label>@ViewData["fName"]</label><br />
<img src="@ViewData["fileLocation"]" />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}