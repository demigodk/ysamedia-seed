@model ysamedia.Entities.Photo

@{
    ViewData["Title"] = "User Profile";
    ViewData.AddActivePage(UserProfileNavPages.Index);
}

<br />
<h4>@ViewData["Title"]</h4>
<div class="row">
    <div class="col-md-12">

        <form method="post" enctype="multipart/form-data" asp-controller="UserProfile" asp-action="Index">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload Profile Picture: </p>
                    <input type="file" name="files" required/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" value="Upload" />
                </div>
            </div>
        </form>

