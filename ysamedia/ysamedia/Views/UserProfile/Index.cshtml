@model ysamedia.Entities.TblPhoto

@{
    ViewData["Title"] = "User Profile";
    ViewData.AddActivePage(UserProfileNavPages.Index);
}

<br />
<h4>@ViewData["Title"]</h4>
@*@Html.Partial("_StatusMessage", Model.StatusMessage)*@
<div class="row">
    <div class="col-md-12">
        <form method="post" enctype="multipart/form-data" asp-controller="UserProfile" asp-action="Index" asp-antiforgery="true">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload Profile Picture: </p>
                    <input asp-for="PhotoName" type="file" name="pic" accept="image/*" />
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-custom waves-effect waves-light">Upload</button>
                @*<input type="submit" value="Upload" />*@
            </div>
        </form>
    </div>
</div>

<label>@ViewData["fName"]</label><br />

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
