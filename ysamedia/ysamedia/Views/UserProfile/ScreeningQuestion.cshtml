@model ysamedia.Models.UserProfileViewModels.UserScreeningQuestionViewModel

@{
    ViewData["Title"] = "ScreeningQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ScreeningQuestion</h2>

<h4>UserScreeningQuestionViewModel</h4>
<hr />
<div class="row">
    <div class="col-md-8">
        <form asp-action="ScreeningQuestion">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">               
                <h4>In your own words, what is the role of the church’s media department?</h4>
                <textarea asp-for="Question1" class="form-control" />
                <span asp-validation-for="Question1" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <h4>What kind of influence do you think a media department has on the church?</h4>
                <textarea asp-for="Question2" class="form-control" />
                <span asp-validation-for="Question2" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <h4>Are media members supposed to carry themselves in a specific manner?</h4>
                <textarea asp-for="Question3" class="form-control" />
                <span asp-validation-for="Question3" class="text-danger"></span>
            </div>
            <div class="form-group">               
                <h4>What is your understanding of being a servant of God?</h4>
                <textarea asp-for="Question4" class="form-control" />
                <span asp-validation-for="Question4" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Submit" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

