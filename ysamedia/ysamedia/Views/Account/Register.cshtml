@model RegisterViewModel
@{
    ViewData["Title"] = "Sign Up";
    Layout = "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>YSM MEDIA - @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta content="ysa media user management web app" name="description" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />

    <!-- App favicon -->
    <link rel="shortcut icon" href="~/favicon.ico">
    <!-- App css -->
    <link href="~/css/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/icons.css" rel="stylesheet" type="text/css" />
    <link href="~/css/metismenu.min.css" rel="stylesheet" type="text/css" />
    <link href="~/css/style.css" rel="stylesheet" type="text/css" />
    <script src="~/js/modernizr.min.js"></script>    
</head>

<body class="account-pages">
    <!-- Begin page -->
    <div class="accountbg" style="background: url('@Url.Content("~/images/bg.jpg")');background-size: 100% 100%;"></div>    
            <div class="wrapper-page account-page-full">
                <div class="card">
                    <div class="card-block">
                        <div class="account-box">
                            <div class="card-box p-5">
                                <h2 class="text-uppercase text-center pb-4">
                                    <a asp-controller="Account" asp-action="Register" class="text-success">
                                        @ViewData["Title"]
                                    </a>
                                </h2>

                                <form asp-route-returnurl="@ViewData["ReturnUrl"]" class="form-horizontal" method="post">
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <input asp-for="Name" class="form-control" id="username" required="" maxlength="50" placeholder="Name">
                                        </div>
                                    </div>
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <input asp-for="Surname" class="form-control" id="username" required="" maxlength="50" placeholder="Surname">
                                        </div>
                                    </div>
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <input asp-for="Email" class="form-control" type="email" id="emailaddress" required="" placeholder="Email">
                                        </div>
                                    </div>
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <select asp-for="GenderId"
                                                    class="form-control" required=""
                                                    asp-items="@(new SelectList(ViewBag.ListOfGenders, "GenderId", "Gname"))">
                                                <option value="" hidden disabled selected>Gender</option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <input asp-for="Password" class="form-control" type="password" required="" id="password" placeholder="Password">
                                        </div>
                                    </div>
                                    <div class="form-group row m-b-20">
                                        <div class="col-12">
                                            <input asp-for="ConfirmPassword" class="form-control" type="password" required="" id="password" placeholder="Confirm Password">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>                                   
                                    <div class="row m-b-20">
                                        <div class="col-sm-12">
                                            <label>BIRTHDAY</label>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <select asp-for="Day"
                                                    class="form-control" required=""
                                                    asp-items="@(new SelectList(ViewBag.ListOfDays, "DayId", "DayNum"))">
                                                <option value="" hidden disabled selected>Day</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <select asp-for="Month"
                                                    class="form-control" required=""
                                                    asp-items="@(new SelectList(ViewBag.ListOfMonths, "MonthId", "Name"))">
                                                <option value="" hidden disabled selected>Month</option>
                                            </select>
                                        </div>
                                        <div class="form-group col-sm-4">
                                            <select asp-for="Year"
                                                    class="form-control" required=""
                                                    asp-items="@(new SelectList(ViewBag.ListOfYears, "YearId", "YearNum"))">
                                                <option value="" hidden disabled selected>Year</option>
                                            </select>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="form-group row text-center m-t-10">
                                        <div class="col-12">
                                            <button class="btn btn-block btn-custom waves-effect waves-light" type="submit">Sign Up</button>
                                        </div>
                                    </div>
                                </form>
                                <div class="row m-t-50">
                                    <div class="col-sm-12 text-center">
                                        <p class="text-muted">Already have an account?  <a asp-controller="Account" asp-action="Login" class="text-dark m-l-5"><b>Sign In</b></a></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="m-t-40 text-center">
                    <p class="account-copyright">2018 © YSA MEDIA.</p>
                </div>
            </div>

            <!-- jQuery  -->
            <script src="~/js/jquery.min.js"></script>
            <script src="~/js/popper.min.js"></script>
            <script src="~/js/bootstrap.min.js"></script>
            <script src="~/js/metisMenu.min.js"></script>
            <script src="~/js/waves.js"></script>
            <script src="~/js/jquery.slimscroll.js"></script>
            <!-- App js -->
            <script src="~/js/jquery.core.js"></script>
            <script src="~/js/jquery.app.js"></script>
</body>
</html>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




