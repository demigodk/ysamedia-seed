@model ysamedia.Models.DepartmentViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Create Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<hr />
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <input type="hidden" asp-for="NumMembers" class="form-control" />
            <input type="hidden" asp-for="DepartmentLead" class="form-control" />
            <input type="hidden" asp-for="Deputy" class="form-control" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentLeaderId" class="control-label"></label>
                <select asp-for="DepartmentLeaderId" class="form-control" asp-items="ViewBag.DepartmentLeaderId">
                    <option value="Not Set" hidden disabled selected>Please select</option>
                </select>
            </div>            
            <div class="form-group">
                <label asp-for="DeputyId" class="control-label"></label>
                <select asp-for="DeputyId" class="form-control" asp-items="ViewBag.DeputyId">
                    <option value="Not Set" hidden disabled selected>Please select</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

