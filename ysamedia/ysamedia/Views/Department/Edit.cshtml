@model ysamedia.Models.DepartmentViewModels.DepartmentViewModel

@{
    ViewData["Title"] = "Edit Department";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="DepartmentId" />
            <input type="hidden" asp-for="NumMembers" />
            <input type="hidden" asp-for="DepartmentLead" />
            <input type="hidden" asp-for="Deputy" />
            <div class="form-group">
                <label asp-for="DepartmentName" class="control-label"></label>
                <input asp-for="DepartmentName" class="form-control" />
                <span asp-validation-for="DepartmentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentLeaderId" class="control-label"></label>
                <select asp-for="DepartmentLeaderId" class="form-control" asp-items="ViewBag.DepartmentLeaderId"></select>
                <span asp-validation-for="DepartmentLeaderId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DeputyId" class="control-label"></label>
                <select asp-for="DeputyId" class="form-control" asp-items="ViewBag.DeputyId"></select>
                <span asp-validation-for="DeputyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>

