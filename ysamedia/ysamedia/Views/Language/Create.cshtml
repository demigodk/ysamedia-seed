@model ysamedia.Models.LanguageViewModels.LanguageViewModel

@{
    ViewData["Title"] = "Add Language";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-12">
        <div class="card-box">            
            <p class="text-muted m-b-30 font-14">
                Add Language(s)
            </p>
            <div class="row">
                <div class="col-12">
                    <div class="p-20">
                        <form asp-action="Create" class="form-horizontal" role="form">
                            <div class="form-group row">
                                <label asp-for="Language1" class="col-2 col-form-label"></label>
                                <div class="col-10">
                                    <input asp-for="Language1" class="form-control" />
                                    <span asp-validation-for="Language1" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="Proficiency" class="col-2 col-form-label"></label>
                                <div class="col-10">
                                    <select asp-for="Proficiency" id="inputState" class="form-control">
                                        <option>Speak, Read, Write</option>
                                        <option>Speak, Read</option>
                                        <option value="" hidden disabled selected>Please Select</option>
                                    </select>
                                    <span asp-validation-for="Proficiency" class="text-danger"></span>
                                </div>                                
                            </div>
                            <input type="hidden" asp-for="PrimaryLanguage" />
                            <input type="hidden" asp-for="UserId" />
                            <div class="form-group">
                                <button class="btn btn-custom waves-effect waves-light" type="submit">Add</button>
                            </div>
                        </form>
                    </div>
                </div>
                </div>

                <div>
                    <a asp-action="Index">Back to List</a>
                </div>
            </div>
    </div>
</div>
