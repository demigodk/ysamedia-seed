@model IEnumerable<ysamedia.Entities.Language>

@{
    ViewData["Title"] = "Language";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card-box">            
            <p>
                <a asp-action="Create">Add New</a>
            </p>
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>
                            <label>Language(s)</label>
                        </th>
                        <th>
                            <label>Language Proficiency</label>
                        </th>
                        <th><label>Action</label></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Language1)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Proficiency)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.LanguageId">Edit</a> |
                                <a asp-action="Delete" asp-route-id="@item.LanguageId">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <hr />
        </div>
    </div>
</div>