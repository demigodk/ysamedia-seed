@model ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
    ViewData.AddActivePage(ManageNavPages.ChangePassword);
}

<div class="row">
    <div class="col-12">
        <div class="card-box">           
            @Html.Partial("_StatusMessage", Model.StatusMessage)
            <div class="row">
                <div class="col-12">
                    <div class="p-20">                       
                        <form method="post">
                            <div asp-validation-summary="All" class="text-danger"></div>
                            <div class="form-group row">
                                <label asp-for="OldPassword" class="col-2 col-form-label"></label>
                                <div class="col-10">
                                    <input asp-for="OldPassword" class="form-control" />
                                    <span asp-validation-for="OldPassword" class="text-danger"></span>
                                </div>
                            </div>                           
                            <div class="form-group row">
                                <label asp-for="NewPassword" class="col-2 col-form-label"></label>
                                <div class="col-10">
                                    <input asp-for="NewPassword" class="form-control" />
                                    <span asp-validation-for="NewPassword" class="text-danger"></span>
                                </div>
                            </div>                            
                            <div class="form-group row">
                                <label asp-for="ConfirmPassword" class="col-2 col-form-label"></label>
                                <div class="col-10">
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>                           
                            <div class="form-group">
                                <button type="submit" class="btn btn-custom waves-effect waves-light">Update password</button>                               
                            </div>                            
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}
